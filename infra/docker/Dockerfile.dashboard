FROM node:22-alpine

WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@8.14.0 --activate

# Copy all files
COPY . .

# Install dependencies
RUN pnpm install

ENV NODE_ENV=production
ENV PORT=3001

EXPOSE 3001

# Run Next.js dev server
CMD ["pnpm", "--filter", "@workspace/dashboard", "dev"]
